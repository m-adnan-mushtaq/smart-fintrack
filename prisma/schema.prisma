// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider        = "prisma-client-js"
  previewFeatures = ["clientExtensions"]
}

datasource db {
  provider = "postgresql"
  url      = env("LOCAL_DATABASE_URL")
}

model User {
  id           String        @id @default(uuid())
  name         String        @db.VarChar(50)
  email        String        @unique
  password     String?
  googleId     String?       @db.VarChar(50)
  verified     Boolean       @default(false)
  picUrl       String        @default("/assets/avatar.svg")
  currency     String        @default("USD") @db.VarChar(10)
  incomes      Income[]
  expenses     Expense[]
  savingGoals  SavingGoal[]
  Budget       Budget?
  createdAt    DateTime      @default(now())
  activityLogs ActivityLog[] @relation("activityLogs")
  causeLogs    ActivityLog[] @relation("causeLogs")
}

model Budget {
  id          String       @id @default(uuid())
  type        BudgetType   @default(PERSONAL)
  User        User         @relation(fields: [userId], references: [id])
  userId      String       @unique()
  incomes     Income[]
  expenses    Expense[]
  savingGoals SavingGoal[]
}

model Income {
  id        String   @id @default(uuid())
  source    String   @db.VarChar(100)
  amount    Int
  User      User     @relation(fields: [userId], references: [id])
  userId    String
  Budget    Budget   @relation(fields: [budgetId], references: [id])
  budgetId  String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([updatedAt(sort: Desc)])
  @@index([amount(sort: Desc)])
  @@index([source], type: Hash)
}

model SavingGoal {
  id          String   @id @default(uuid())
  target      String   @db.VarChar(100)
  description String?  @db.VarChar(200)
  amount      Int
  User        User     @relation(fields: [userId], references: [id])
  userId      String
  Budget      Budget   @relation(fields: [budgetId], references: [id])
  budgetId    String
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  @@index([updatedAt(sort: Desc)])
  @@index([amount(sort: Desc)])
  @@index([target], type: Hash)
}

model Expense {
  id          String     @id @default(uuid())
  title       String     @db.VarChar(100)
  description String?    @db.VarChar(200)
  category    ExpenseCat @default(VAIRABLE)
  amount      Int
  User        User       @relation(fields: [userId], references: [id])
  userId      String
  Budget      Budget     @relation(fields: [budgetId], references: [id])
  budgetId    String
  createdAt   DateTime   @default(now())
  updatedAt   DateTime   @updatedAt

  @@index([updatedAt(sort: Desc)])
  @@index([amount])
  @@index([category], type: Hash)
  @@index([title], type: Hash)
}

model ActivityLog {
  id          String   @id @default(uuid())
  sender      User?    @relation("causeLogs", fields: [senderId], references: [id], onDelete: Cascade, onUpdate: NoAction)
  recipient   User     @relation("activityLogs", fields: [recipientId], references: [id], onDelete: Cascade, onUpdate: NoAction)
  senderId    String?
  recipientId String
  type        LogType
  createdAt   DateTime @default(now())
  entityId    String
  isRead      Boolean  @default(false)

  @@index([recipientId, isRead, createdAt(sort: Desc)])
}

enum BudgetType {
  STUDENT
  PERSONAL
  FAMILY
}

enum ExpenseCat {
  FIXED
  VAIRABLE
  BILL
  FUN
}

enum LogType {
  EMAIL_UPDATED
  PASSWORD_UPDATED
  PROFILE_UPDATED
  BUDGET_ADDED
  SAVING_GOAL_ADDED
  EXPENSE_ADDED
  INCOME_SOURCE_ADDED
}
